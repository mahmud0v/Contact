<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="7dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_card_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars[]" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/username_id"
        android:layout_width="255dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:text="Islomjon"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/image_card_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phone_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+998902307762"
        android:layout_marginLeft="4dp"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:textColor="#DD000000"
        app:layout_constraintTop_toBottomOf="@id/username_id"
        app:layout_constraintLeft_toLeftOf="@id/username_id"
        />





</androidx.constraintlayout.widget.ConstraintLayout>

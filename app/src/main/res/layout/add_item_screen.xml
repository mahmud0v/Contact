<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="120dp"
        android:text="Add account"
        android:id="@+id/login_text_id"
        android:textSize="26sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_text_id"
        android:layout_marginTop="40dp"
        android:hint="username"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:id="@+id/login_edittext1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_edittext1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:hint="phone"
        android:id="@+id/login_edittext2"
        android:layout_marginRight="50dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_edittext2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:imeOptions="actionDone"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:id="@+id/login_edittext3"
        android:layout_marginRight="50dp"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_edittext3"
        android:layout_marginTop="100dp"
        android:backgroundTint="#41AC5A"
        android:text="Add account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/reg_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>